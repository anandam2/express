<div class="d-flex align-items-center justify-content-between mb-4 pb-3 border-bottom">
    <div>
        <h2 class="fw-bold text-dark mb-1">Edit Product Details</h2>
        <p class="text-muted small mb-0">Modify the fields below to update your inventory records.</p>
    </div>
    <a href="/products/list" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
        <i class="bi bi-arrow-left me-1"></i> Back to List
    </a>
</div>

<% if(typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-octagon-fill me-2 fs-5"></i>
        <div>
            <strong>Update failed:</strong> <%= Object.values(error).map(e => e.message).join(', ') %>
        </div>
    </div>
<% } %>

<form method="POST" action="/update_product/<%= product._id %>" class="row g-4">
    
    <div class="col-md-8">
        <label class="form-label fw-bold text-secondary small text-uppercase">Product Name</label>
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white"><i class="bi bi-pencil"></i></span>
            <input type="text" name="name" class="form-control form-control-lg border-start-0" 
                   value="<%= product.name %>" placeholder="Enter product name" required>
        </div>
    </div>

    <div class="col-md-4">
        <label class="form-label fw-bold text-secondary small text-uppercase">Price (USD)</label>
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white"><i class="bi bi-currency-dollar text-success"></i></span>
            <input type="number" name="price" class="form-control form-control-lg border-start-0" 
                   value="<%= product.price %>" placeholder="0.00" required>
        </div>
    </div>

    <div class="col-12">
        <label class="form-label fw-bold text-secondary small text-uppercase">Detailed Description</label>
        <textarea name="description" class="form-control shadow-sm" rows="5" 
                  placeholder="Describe the product..." required><%= product.description %></textarea>
    </div>

    <div class="col-12 pt-3">
        <div class="d-flex align-items-center gap-3">
            <button type="submit" class="btn btn-primary btn-lg px-5 fw-bold shadow-sm transition-lift">
                Update Product
            </button>
            <button type="reset" class="btn btn-link text-decoration-none text-muted fw-medium">
                Reset Changes
            </button>
        </div>
    </div>
</form>

<style>
    /* Professional Polishing */
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
    .input-group-text {
        border-right: none;
        color: #adb5bd;
    }
    .transition-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .transition-lift:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.15) !important;
    }
</style>