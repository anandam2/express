<div class="row justify-content-center">
  <div class="col-md-7 col-lg-6">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
      <div class="card-body p-5">
        
        <div class="text-center mb-4">
          <div class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 mb-2">Welcome Back</div>
          <h2 class="fw-bold">Login</h2>
          <p class="text-muted small">Enter your credentials to access your account</p>
        </div>

        <form action="/login" method="POST">
          <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
            <label for="floatingEmail">Email address</label>
          </div>
          
          <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
            <label for="floatingPassword">Password</label>
          </div>

          <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
              Sign In
            </button>
          </div>

          <% if (message) { %>
            <div class="alert alert-danger d-flex align-items-center mt-3 border-0 shadow-sm" role="alert">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
              </svg>
              <div><%= message %></div>
            </div>
          <% } %>
        </form>

        <hr class="my-4 text-muted">

        <div class="text-center">
          <p class="mb-0 text-muted">Don't have an account? 
            <a href="/signup" class="text-primary text-decoration-none fw-semibold">Sign up</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Ensuring the form looks professional and doesn't get cut off by navbar */
  .card {
    transition: transform 0.3s ease;
  }
  .card:hover {
    transform: translateY(-5px);
  }
  .form-control:focus {
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    border-color: #0d6efd;
  }
  /* Floating labels give a high-end app feel */
  .form-floating > label {
    color: #6c757d;
  }
</style>