<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5 col-xl-4">
    <div class="card border-0 shadow-lg p-4" style="border-radius: 16px;">
      <div class="card-body">
        
        <div class="text-center mb-4">
          <h2 class="fw-bold text-dark">Create Account</h2>
          <p class="text-muted small">Join us to start organizing your thoughts</p>
        </div>

        <form action="/signup" method="POST">
          <div class="mb-3">
            <label class="form-label small fw-semibold text-secondary">Email Address</label>
            <input type="email" name="email" placeholder="name@email.com" 
                   class="form-control form-control-lg border-2 shadow-none" 
                   style="font-size: 0.95rem; border-color: #f1f5f9; background-color: #f8fafc;" required>
          </div>
          
          <div class="mb-3">
            <label class="form-label small fw-semibold text-secondary">Password</label>
            <input type="password" name="password" placeholder="Create a password" 
                   class="form-control form-control-lg border-2 shadow-none" 
                   style="font-size: 0.95rem; border-color: #f1f5f9; background-color: #f8fafc;" required>
          </div>

          <div class="mb-4">
            <label class="form-label small fw-semibold text-secondary">Confirm Password</label>
            <input type="password" name="confirmPassword" placeholder="Repeat your password" 
                   class="form-control form-control-lg border-2 shadow-none" 
                   style="font-size: 0.95rem; border-color: #f1f5f9; background-color: #f8fafc;" required>
          </div>

          <button type="submit" class="btn btn-primary btn-lg w-100 py-2 fw-bold shadow-sm">
            SIGNIN
          </button>

          <% if (message) { %>
            <div class="alert alert-danger border-0 mt-4 small d-flex align-items-center" role="alert" style="border-radius: 10px;">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
              </svg>
              <%= message %>
            </div>
          <% } %>
        </form>

        <div class="text-center mt-4 border-top pt-3">
          <p class="text-muted small mb-0">Already have an account?</p>
          <a href="/login" class="fw-bold text-primary text-decoration-none">Log in here</a>
        </div>
        
      </div>
    </div>
  </div>
</div>