<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card border-0 shadow-lg p-4" style="border-radius: 16px;">
      <div class="card-body">
        
        <div class="text-center mb-4">
          <h2 class="fw-bold text-dark">Welcome Back</h2>
          <p class="text-muted small">Please enter your details to sign in</p>
        </div>

        <form action="/login" method="POST">
          <div class="mb-3">
            <label class="form-label small fw-semibold text-secondary">Email Address</label>
            <input type="email" name="email" placeholder="name@company.com" 
                   class="form-control form-control-lg border-2 shadow-none" 
                   style="font-size: 0.95rem; border-color: #f1f5f9; background-color: #f8fafc;" required>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <label class="form-label small fw-semibold text-secondary">Password</label>
              <a href="#" class="small text-decoration-none text-primary">Forgot?</a>
            </div>
            <input type="password" name="password" placeholder="••••••••" 
                   class="form-control form-control-lg border-2 shadow-none" 
                   style="font-size: 0.95rem; border-color: #f1f5f9; background-color: #f8fafc;" required>
          </div>

          <button type="submit" class="btn btn-primary btn-lg w-100 mt-2 py-2 fw-bold shadow-sm">
            LOGIN
          </button>

          <% if (message) { %>
            <div class="alert alert-danger border-0 mt-4 small d-flex align-items-center" role="alert" style="border-radius: 10px;">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle-fill me-2" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
              </svg>
              <%= message %>
            </div>
          <% } %>
        </form>

        <div class="text-center mt-4">
          <p class="text-muted small mb-0">Don't have an account?</p>
          <a href="/signup" class="fw-bold text-primary text-decoration-none">Create an account</a>
        </div>
        
      </div>
    </div>
  </div>
</div>